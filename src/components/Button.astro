---
export interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  href?: string;
  type?: 'button' | 'submit';
  class?: string;
}

const { variant = 'primary', href, type = 'button', class: className = '' } = Astro.props;

const variants = {
  primary: 'bg-primary-500 hover:bg-primary-400 active:bg-primary-600 text-text-primary shadow-lg shadow-primary-500/20 hover:shadow-xl hover:shadow-primary-400/30 hover:scale-105 active:scale-100',
  secondary: 'bg-bg-tertiary hover:bg-bg-overlay text-text-primary border border-border hover:border-border-emphasis',
  ghost: 'bg-transparent hover:bg-bg-tertiary text-text-secondary hover:text-text-primary'
};

const baseClasses = 'inline-flex items-center justify-center gap-2 px-6 py-3 rounded-lg font-semibold text-base transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-bg-primary';

const Element = href ? 'a' : 'button';
---

<Element
  href={href}
  type={!href ? type : undefined}
  class={`${baseClasses} ${variants[variant]} ${className}`}
>
  <slot />
</Element>
