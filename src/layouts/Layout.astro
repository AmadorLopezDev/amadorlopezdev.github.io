---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { title = "Amador López Parra", image } = Astro.props.frontmatter || Astro.props;
const gaTrackingId = import.meta.env.GA_TRACKING_ID;
console.log(gaTrackingId);
---
<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link href="https://fonts.googleapis.com/css2?family=Schoolbell&display=swap" rel="stylesheet" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link
            rel="alternate"
            type="application/rss+xml"
            title="Amador López Parra"
            href={`${Astro.site}rss.xml`}
        />
       {gaTrackingId && (
        console.log(gaTrackingId),
        <>            
            <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaTrackingId}`}></script>
            <script>
                    window.dataLayer = window.dataLayer || [];
                    function gtag(){dataLayer.push(arguments);}
                    gtag('js', new Date());
                    gtag('config', '{gaTrackingId}');
                </script>
        </>
        )}
    </head>
    <body class="bg-board-dark text-chalk flex flex-col min-h-screen text-lg">
        <div class="pizarra-marco flex flex-col flex-grow">
            <Header/>     
            <main class="flex-grow container mx-auto p-4 fade-in">
                <div class="pizarra-container p-6 rounded-lg shadow-lg">
                    {image && <img src={image} alt={title} class="w-full h-64 object-cover rounded mb-4" />}
                    <slot />
                </div>
            </main>
            <Footer/>
        </div>
        <script src="/menu.js" is:inline></script>
    </body>
</html>